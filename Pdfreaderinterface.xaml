<Window x:Class="PdfEditorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Editor" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                <Button Content="Open PDF" Click="OpenPdf_Click" Margin="5"/>
                <Button Content="Add Text to Page 1" Click="AddText_Click" Margin="5"/>
                <Button Content="Save PDF" Click="SavePdf_Click" Margin="5"/>
            </StackPanel>

            <!-- Embed PDF viewer here -->
            <WindowsFormsHost x:Name="pdfHost" />
        </DockPanel>
    </Grid>
</Window>
